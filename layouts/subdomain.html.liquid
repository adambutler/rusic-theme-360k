{% assign assets_url="http://www.littlebigmedia.com/private/rusic/public" %}

<!DOCTYPE html>
<html>
	<head>
		<title>360k</title>
		<meta charset="UTF-8">
		
		<!-- ################# -->
		<!-- #               # -->
		<!-- #  Stylesheets  # -->
		<!-- #               # -->
		<!-- ################# -->
		<link href="{{assets_url}}/stylesheets/bootstrap.min.css" rel="stylesheet">
		<link href="{{assets_url}}/stylesheets/fontface.css" rel="stylesheet">
		<link href="{{assets_url}}/stylesheets/twitter-bubble.css" rel="stylesheet">
		<link href="{{assets_url}}/stylesheets/header.css" rel="stylesheet">
		<link href="{{assets_url}}/stylesheets/index.css" rel="stylesheet">
		<link href="{{assets_url}}/stylesheets/style.css" rel="stylesheet">
		
		<!-- ################ -->
		<!-- #              # -->
		<!-- #  Javascript  # -->
		<!-- #              # -->
		<!-- ################ -->
		<script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>
		
		<script src="{{assets_url}}/lib/codemirror/lib/codemirror.js" type="text/javascript"></script>
		<script src="{{assets_url}}/lib/codemirror/mode/xml/xml.js" type="text/javascript"></script>
		<script src="{{assets_url}}/lib/codemirror/mode/javascript/javascript.js" type="text/javascript"></script>
		<script src="{{assets_url}}/lib/codemirror/mode/css/css.js" type="text/javascript"></script>
		<script src="{{assets_url}}/lib/codemirror/mode/htmlmixed/htmlmixed.js" type="text/javascript"></script>
		<link href="{{assets_url}}/lib/codemirror/lib/codemirror.css" rel="stylesheet">
		
		<script src="{{assets_url}}/javascripts/codemirror.js"></script>
		
		<script src="{{assets_url}}/javascripts/main.js"></script>
	</head>
	<body>
		<header class="main-header">
			<div class="container">
				<div class="title">
			    	<a href="{{space.permalink}}" target="_self" class="font-chunk-five">
			    		<h1>360k</h1>
			    	</a>
					<blockquote class="example-twitter">
						<p>Three hundred and sixty thousand pixels & 360kb to do something awesome with...</p>
					</blockquote>
				</div>
				<nav class="menu">
	    			
	    			
	    			{% if current_user %}
						<div class="btn lightbtn" lightbox_id="submit_code_lightbox">
							<i class="pencil"></i> Submit your code
						</div>
						{% if space.user.provider == 'twitter' %}
							<div class="btn twitter social-btn">
			    				<a href="/signout">
			    					<span class="font-social-logos"><</span> Signout
			    				</a>
			    			</div>
						{% else %}
							<div class="btn facebook social-btn">
								<a href="/signout">
			    					<span class="font-social-logos">C</span> Signout
			    				</a>
			    			</div>
		    			{% endif %}
					{% else %}
						<div class="btn facebook social-btn">
		    				<a href="/auth/facebook">
		    					<span class="font-social-logos">C</span> Login with Facebook
		    				</a>
		    			</div>
		    			<div class="btn twitter social-btn">
		    				<a href="/auth/twitter">
		    					<span class="font-social-logos">M</span> Login with Twitter
		    				</a>
		    			</div>
					{% endif %}
				</nav>
			</div>
		</header>
		<div class="hr light-to-dark"></div>
		<div class="container main-body">
			{{yield}}
		</div>
		<div class="hr dark-to-light"></div>
		<footer>
		
		</footer>
	</body>
</html>